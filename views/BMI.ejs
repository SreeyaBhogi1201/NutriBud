    <section id="bmi-calculator" class="section py-5 flex-fill">
        <div class="container">
            <div class="bmi-box">
                <h2 class="text-info">BMI Calculator</h2>
                <form id="bmiForm">
                    <div class="form-group">
                        <label for="weight">Weight (kg):</label>
                        <input type="number" id="weight" name="weight" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="height">Height (cm):</label>
                        <input type="number" id="height" name="height" class="form-control" required>
                    </div>
                    <button type="button" onclick="calculateBMI()" class="btn btn-info">Calculate BMI</button>
                </form>
                <div id="result" class="mt-4">
                    <h3>Your BMI: <span id="bmiValue"></span></h3>
                    <p id="bmiCategory"></p>
                </div>
            </div>
        </div>
